{
  "compilerOptions": {
    "baseUrl": "./src", // This must be specified if "paths" is.
    "paths": {
      "@modules/*": [
        "core/modules/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@plugins/*": [
        "plugins/*"
      ],
      "@common/*": [
        "core/common/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": false,
    "incremental": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "checkJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2020"
  },
  "types": [],
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}